---
// SimpleAd.astro - Direct ad implementation without any optimizations
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;

// Generate unique ID for this ad instance
const adId = `ad-${Math.random().toString(36).substr(2, 9)}`;
---

<div class={`simple-ad ${className}`} id={adId}>
  <!-- Your ad code will be injected here -->
</div>

<script define:vars={{ adId }}>
  // Direct ad implementation - no loading states, no optimizations
  (function() {
    'use strict';
    
    const adContainer = document.getElementById(adId);
    if (!adContainer) return;
    
    // Set your ad configuration
    window.atOptions = {
      'key': '5db4e115c9cae4168f6efca75fe17bd9',
      'format': 'iframe',
      'height': 250,
      'width': 300,
      'params': {}
    };
    
    // Load your ad script
    const script = document.createElement('script');
    script.type = 'text/javascript';
    script.src = '//chillimagepublisher.com/5db4e115c9cae4168f6efca75fe17bd9/invoke.js';
    
    // Append script to the ad container
    adContainer.appendChild(script);
    
  })();
</script>

<style>
  .simple-ad {
    width: 300px;
    height: 250px;
    margin: 20px auto;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>