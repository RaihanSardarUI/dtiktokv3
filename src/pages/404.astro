---
import Layout from '../layouts/Layout.astro';
import { getCurrentDomain } from '../utils/domainUtils.js';

// Ensure this page is rendered server-side for proper domain detection
export const prerender = false;

// Get current domain for consistent URL generation
const currentDomain = getCurrentDomain(Astro);
const currentHostname = new URL(currentDomain).hostname;
---

<Layout 
  title={`Page Not Found - ${currentHostname}`} 
  description="The page you're looking for could not be found. Return to DTikTok homepage to download TikTok videos on iOS."
>
  <div class="min-h-screen flex items-center justify-center">
    <div class="text-center max-w-md mx-auto px-4">
      <h1 class="text-9xl font-black text-primary mb-4">404</h1>
      <h2 class="text-3xl font-bold text-white mb-4">Page Not Found</h2>
      <p class="text-gray-400 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="space-y-4">
        <a href="/" class="btn btn-primary btn-lg block">
          Back to Home
        </a>
        <a href="/add-dtiktok/" class="btn btn-outline btn-primary block">
          Download DTikTok
        </a>
      </div>
    </div>
  </div>
</Layout> 
