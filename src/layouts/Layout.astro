    "Download TikTok Videos Without Watermark",
    "High-Quality Downloads",
    "Audio-Only Download Option",
    "Fast and Easy to Use",
    "100% Free and Safe",
    "Compatible with Latest iOS Versions",
    "Lightweight and Quick Setup",
    "Regular Updates"
  ],
  seo: {
    searchConsole: "",
    analyticsId: "",
    adsTxt: "",
    robotsTxt: "",
    otherVerification: "",
    customMeta: "",
    headAdsCode: ""
