  <!-- Loading System JavaScript -->
  <script>
    // Initialize loading system
    function initializeLoadingSystem() {
      const loader = document.getElementById('page-loader');
      
      // Show loader immediately
      if (loader) {
        loader.style.display = 'flex';
        document.body.classList.add('loading');
      }
      
      // Hide loader when page is fully loaded
      function hideLoader() {
        if (loader) {
          loader.classList.add('fade-out');
          document.body.classList.remove('loading');
          setTimeout(() => {
            loader.style.display = 'none';
          }, 500);
        }
      }
      
      // Wait for all content to load
      if (document.readyState === 'loading') {
        window.addEventListener('load', () => {
          setTimeout(hideLoader, 800);
        });
      } else {
        setTimeout(hideLoader, 300);
      }
      
      // Fallback: hide loader after maximum time
      setTimeout(hideLoader, 5000);
    }
    
    // Initialize immediately
    initializeLoadingSystem();
    
    // Prevent horizontal scroll
    function preventHorizontalScroll() {
      document.documentElement.style.overflowX = 'hidden';
      document.body.style.overflowX = 'hidden';
      
      // Fix for mobile
      if (window.innerWidth <= 768) {
        document.documentElement.style.width = '100%';
        document.body.style.width = '100%';
        document.documentElement.style.maxWidth = '100%';
        document.body.style.maxWidth = '100%';
      }
    }
    
    // Apply fixes
    preventHorizontalScroll();
    window.addEventListener('resize', preventHorizontalScroll);
    
    // Mobile Menu Functionality
    function initializeMobileMenu() {
      const menuButton = document.getElementById('mobile-menu-button');
      const menuOverlay = document.getElementById('mobile-menu-overlay');
      const menuClose = document.getElementById('mobile-menu-close');
      const body = document.body;
      
      if (!menuButton || !menuOverlay || !menuClose) return;
      
      // Open menu
      function openMenu() {
        menuButton.classList.add('active');
        menuOverlay.classList.add('active');
        body.classList.add('mobile-menu-open');
      }
      
      // Close menu
      function closeMenu() {
        menuButton.classList.remove('active');
        menuOverlay.classList.remove('active');
        body.classList.remove('mobile-menu-open');
      }
      
      // Event listeners
      menuButton.addEventListener('click', openMenu);
      menuClose.addEventListener('click', closeMenu);
      
      // Close menu when clicking overlay
      menuOverlay.addEventListener('click', (e) => {
        if (e.target === menuOverlay) {
          closeMenu();
        }
      });
      
      // Close menu on escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && menuOverlay.classList.contains('active')) {
          closeMenu();
        }
      });
      
      // Close menu when clicking menu items
      const menuItems = menuOverlay.querySelectorAll('.mobile-menu-item, .mobile-menu-social');
      menuItems.forEach(item => {
        item.addEventListener('click', () => {
          setTimeout(closeMenu, 300); // Small delay for better UX
        });
      });
    }
    
    // Initialize mobile menu
    initializeMobileMenu();
  </script>

