---
import '../styles/global.css';
import { getCurrentDomain, getCanonicalUrl } from '../utils/domainUtils.js';
import PageLoader from '../components/PageLoader.astro';

export interface Props {
  title: string;
  description: string;
  canonical?: string;
  robots?: string;
}

// Ensure this component is rendered server-side to access request headers
